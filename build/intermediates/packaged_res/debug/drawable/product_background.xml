<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with solid color, stroke, and border radius -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#23232B" />
            <stroke android:color="#353541" android:width="1dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Horizontal line 68dp from the bottom -->
    <item
        android:bottom="68dp"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#202027" />
            <stroke android:color="#353541" android:width="1dp"/>
            <corners android:topLeftRadius="10dp"
                android:topRightRadius="10dp"/>
        </shape>
    </item>
</layer-list>