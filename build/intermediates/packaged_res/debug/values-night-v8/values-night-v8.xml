<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FixIt" parent="Theme.MaterialComponents.Light">
        
        <item name="colorPrimary">#7F5AF0</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        
        
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="Theme.FixIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.FixIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.FixIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>