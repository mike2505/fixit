<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16161A"
    tools:context=".DiscoverFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/searchService"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/search_bar_background"
            android:fontFamily="@font/inter_medium"
            android:hint="Search Service"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/home_screen_group_7364"
            app:layout_constraintEnd_toEndOf="@+id/searchService"
            app:layout_constraintTop_toTopOf="@+id/searchService" />


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="@+id/searchService"
            app:layout_constraintStart_toStartOf="@+id/searchService"
            app:layout_constraintTop_toBottomOf="@+id/searchService">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/product_top1"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/product_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/adv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="44dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Low price"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name1" />

                    <TextView
                        android:id="@+id/adv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="High Speed"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name1" />

                    <ImageView
                        android:id="@+id/logo1"
                        android:layout_width="225dp"
                        android:layout_height="172dp"
                        android:layout_marginTop="32dp"
                        android:src="@drawable/image_9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Engine Diagnostic"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/logo1" />

                    <ImageView
                        android:id="@+id/checkv10"
                        android:layout_width="14dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/home_screen_vector"
                        app:layout_constraintStart_toStartOf="@+id/name1"
                        app:layout_constraintTop_toBottomOf="@+id/name1" />

                    <ImageView
                        android:id="@+id/checkv11"
                        android:layout_width="14dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/home_screen_vector"
                        app:layout_constraintStart_toStartOf="@+id/checkv10"
                        app:layout_constraintTop_toBottomOf="@+id/checkv10" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/product_top2"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/product_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/adv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="44dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Low price"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name2" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="172dp"
                        android:layout_height="173dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/_860f7ca4fc7f3474eb80db2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/product_top2"
                        app:layout_constraintTop_toTopOf="@+id/product_top2" />

                    <TextView
                        android:id="@+id/adv21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="High Speed"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name2" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tires change"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

                    <ImageView
                        android:id="@+id/checkv20"
                        android:layout_width="14dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/home_screen_vector"
                        app:layout_constraintStart_toStartOf="@+id/name2"
                        app:layout_constraintTop_toBottomOf="@+id/name2" />

                    <ImageView
                        android:id="@+id/checkv21"
                        android:layout_width="14dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/home_screen_vector"
                        app:layout_constraintStart_toStartOf="@+id/checkv20"
                        app:layout_constraintTop_toBottomOf="@+id/checkv20" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/product_top3"
                        android:layout_width="wrap_content"
                        android:layout_height="300dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/product_background"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/adv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="44dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Low price"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name3" />

                    <TextView
                        android:id="@+id/adv31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Best Quality"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/name3" />

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Transmission Diagnostic"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

                    <ImageView
                        android:id="@+id/checkv30"
                        android:layout_width="14dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/home_screen_vector"
                        app:layout_constraintStart_toStartOf="@+id/name3"
                        app:layout_constraintTop_toBottomOf="@+id/name3" />

                    <ImageView
                        android:id="@+id/checkv31"
                        android:layout_width="14dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/home_screen_vector"
                        app:layout_constraintStart_toStartOf="@+id/checkv30"
                        app:layout_constraintTop_toBottomOf="@+id/checkv30" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="247dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/trans"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/product_top3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>